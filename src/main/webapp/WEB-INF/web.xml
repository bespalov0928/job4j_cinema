<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>HallServlet</servlet-name>
        <servlet-class>ru.job4j.cinema.controller.HallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HallServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentServelet</servlet-name>
        <servlet-class>ru.job4j.cinema.controller.PaymentServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServelet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

</web-app>
